{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es2016", "dom"],
		"plugins": [
			{
				"name": "typescript-styled-plugin",
				"validate": false
			}
		],
		"allowJs": true,
		"jsx": "preserve",

		"noEmit": true,

		"strict": true,
		"noImplicitAny": false,

		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@components": ["./components"],
			"@components/*": ["./components/*"],
			"@utils/*": ["./utils/*"],
			"@utils": ["./utils"],
			"@pages": ["./pages"],
			"@pages/*": ["./pages/*"],
			"@interfaces/*": ["./interfaces/*"],
			"@interfaces": ["./interfaces"],
			"@models": ["./models"],
			"@models/*": ["./models/*"],
			"@constants": ["./constants"],
			"@i18n": ["./i18n"],
			"@services/*": ["./services/*"],
			"@types": ["./types"],
			"@types/*": ["./types/*"],
			"@styles/*": ["./styles/*"],
			"@containers/*": ["./containers/*"],
			"@theme": ["./theme"]
		},
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true
	},
	"exclude": ["node_modules"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "index.js"]
}
